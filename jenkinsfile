pipeline{
    agent any
    stages{
        stage("install dependencies"){
            agent{
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps{
                sh '''npm install
                     npm install --save-dev mocha
                '''

            }
        }
        stage("Build"){
            steps{
                sh 'docker build -t node_web_app .'
            }
        }
        stage("Test"){
            steps{
                sh'npm test'
            }
        }
        stage('Deploy to Docker'){
            steps{
                sh'docker run -d -p 3000:3000 --name=node_web_container node_web_app'
            }
        }


    }
    post{
        always{
            echo 'Pipeline completed'
        }
    }
    
}